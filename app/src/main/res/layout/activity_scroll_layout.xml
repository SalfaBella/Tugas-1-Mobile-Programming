<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity_scroll_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_red_dark"
            android:text="Tugas Mobile"
            android:textSize="22sp"
            android:gravity="start" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:background="@android:color/holo_green_light"
                android:text="Ini"
                android:textSize="22sp"
                android:gravity="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:layout_width="250dp"
                android:background="@android:color/holo_orange_light"
                android:text="Linear Layout"
                android:textSize="22sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_bright"
            android:text="Kelas"
            android:textSize="22sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_green_dark"
            android:text="Teknik"
            android:textSize="22sp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_purple"
            android:text="Informatika"
            android:textSize="22sp"
            android:gravity="end"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_dark"
            android:text="B"
            android:textSize="22sp"
            android:gravity="start"
            android:layout_gravity="start"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_red_dark"
            android:text="32602000057"
            android:textSize="22sp"
            android:gravity="start"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Tugas"
            android:textSize="22sp"
            android:gravity="start"
            android:layout_gravity="end"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_light"
            android:text="Mobile"
            android:textSize="22sp"
            android:gravity="start" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:background="@android:color/holo_red_light"
                android:text="Programming"
                android:textSize="22sp"
                android:gravity="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:paddingVertical="16dp"
                android:layout_width="250dp"
                android:background="@android:color/holo_green_light"
                android:text="1"
                android:textSize="22sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_purple"
            android:text="Ini Center"
            android:textSize="22sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_orange_light"
            android:text="Ini Center Horizontal"
            android:textSize="22sp"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_green_light"
            android:text="Ini end"
            android:textSize="22sp"
            android:gravity="end"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Ini start"
            android:textSize="22sp"
            android:gravity="start"
            android:layout_gravity="start"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_red_dark"
            android:text="Ini center lagi"
            android:textSize="22sp"
            android:gravity="start"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:background="@android:color/holo_orange_dark"
            android:text="Ini layout end"
            android:textSize="22sp"
            android:gravity="start"
            android:layout_gravity="end"/>
    </LinearLayout>

</ScrollView>